# Git attributes for TrainCW

# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.py text eol=lf
*.pyx text eol=lf
*.pxd text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.json text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf

# Scripts
*.sh text eol=lf
*.bash text eol=lf

# Model files (binary)
*.pt binary
*.pth binary
*.onnx binary
*.mlmodel binary
*.pb binary

# Audio files (binary)
*.wav binary
*.mp3 binary
*.ogg binary
*.flac binary

# Data files
*.npy binary
*.npz binary
*.pkl binary
*.pickle binary

# Images (binary)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text

# Archives (binary)
*.zip binary
*.tar binary
*.gz binary
*.bz2 binary
*.7z binary

# Git LFS tracking for large files
*.pt filter=lfs diff=lfs merge=lfs -text
*.pth filter=lfs diff=lfs merge=lfs -text
*.onnx filter=lfs diff=lfs merge=lfs -text
*.mlmodel filter=lfs diff=lfs merge=lfs -text
